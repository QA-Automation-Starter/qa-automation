<profile>
  <id>dashboard-update</id>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <id>copying-dashboard-resources</id>
            <phase>pre-integration-test</phase>
            <configuration>
              <outputDirectory>${project.build.directory}</outputDirectory>
              <resources>
                <resource>
                  <directory>${project.basedir}/dashboard</directory>
                </resource>
              </resources>
            </configuration>
            <goals>
              <goal>copy-resources</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>dev.aherscu.qa</groupId>
        <artifactId>qa-s3-uploader-maven-plugin</artifactId>
        <version>${project.parent.version}</version>
        <configuration>
          <bucketName>TBD</bucketName>
          <accessKey>TBD</accessKey>
          <secretKey>TBD</secretKey>
          <refreshExpiredObjects>true</refreshExpiredObjects>
          <inputDirectory>target/jgiven-reports</inputDirectory>
          <includes>
            <include>
              <bind>
                <pattern>**/*.txt</pattern>
                <metadataId>plain</metadataId>
              </bind>
            </include>
            <include>
              <bind>
                <pattern>**/*.plain</pattern>
                <metadataId>plain</metadataId>
              </bind>
            </include>
            <include>
              <bind>
                <pattern>**/*.html</pattern>
                <metadataId>html</metadataId>
              </bind>
            </include>
            <include>
              <bind>
                <pattern>**/*.css</pattern>
                <metadataId>css</metadataId>
              </bind>
            </include>
            <include>
              <bind>
                <pattern>**/*.js</pattern>
                <metadataId>js</metadataId>
              </bind>
            </include>
            <include>
              <bind>
                <pattern>**/*.json</pattern>
                <metadataId>json</metadataId>
              </bind>
            </include>
            <include>
              <bind>
                <pattern>**/*.png</pattern>
                <metadataId>png</metadataId>
              </bind>
            </include>
            <include>
              <bind>
                <pattern>**/*.woff</pattern>
                <metadataId>woff</metadataId>
              </bind>
            </include>
          </includes>
          <excludes/>
          <metadatas>
            <metadata>
              <id>plain</id>
              <cacheControl>max-age=0</cacheControl>
              <secondsToExpire>0</secondsToExpire>
              <contentType>text/plain</contentType>
              <contentEncoding>plain</contentEncoding>
              <cannedAcl>PublicRead</cannedAcl>
            </metadata>
            <metadata>
              <id>html</id>
              <cacheControl>max-age=0</cacheControl>
              <secondsToExpire>0</secondsToExpire>
              <contentType>text/html</contentType>
              <contentEncoding>plain</contentEncoding>
              <cannedAcl>PublicRead</cannedAcl>
            </metadata>
            <metadata>
              <id>css</id>
              <cacheControl>max-age=0</cacheControl>
              <secondsToExpire>0</secondsToExpire>
              <contentType>text/css</contentType>
              <contentEncoding>plain</contentEncoding>
              <cannedAcl>PublicRead</cannedAcl>
            </metadata>
            <metadata>
              <id>js</id>
              <cacheControl>max-age=0</cacheControl>
              <secondsToExpire>0</secondsToExpire>
              <contentType>text/javascript</contentType>
              <contentEncoding>plain</contentEncoding>
              <cannedAcl>PublicRead</cannedAcl>
            </metadata>
            <metadata>
              <id>json</id>
              <cacheControl>max-age=0</cacheControl>
              <secondsToExpire>0</secondsToExpire>
              <contentType>application/json</contentType>
              <contentEncoding>plain</contentEncoding>
              <cannedAcl>PublicRead</cannedAcl>
            </metadata>
            <metadata>
              <id>png</id>
              <cacheControl>max-age=0</cacheControl>
              <secondsToExpire>0</secondsToExpire>
              <contentType>image/png</contentType>
              <contentEncoding>plain</contentEncoding>
              <cannedAcl>PublicRead</cannedAcl>
            </metadata>
            <metadata>
              <id>woff</id>
              <cacheControl>max-age=0</cacheControl>
              <secondsToExpire>0</secondsToExpire>
              <contentType>font/woff</contentType>
              <contentEncoding>plain</contentEncoding>
              <cannedAcl>PublicRead</cannedAcl>
            </metadata>
          </metadatas>
        </configuration>
        <executions>
          <execution>
            <id>uploading-dashboard</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>upload</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</profile>
