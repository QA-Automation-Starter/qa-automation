<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<!-- IMPORTANT: do not use the timeout attribute as it interferes with JGiven
  reporting mechanism causing all tests to be reported as failing -->
<suite name="JGiven Commons Tests Suite" verbose="1">
  <test name="defects" parallel="methods" thread-count="10">
    <classes>
      <class
        name="dev.aherscu.qa.jgiven.commons.defects.ParallelMethodsTest"/>
      <class
        name="dev.aherscu.qa.jgiven.commons.defects.DurationReporting"/>
    </classes>
  </test>
</suite>
