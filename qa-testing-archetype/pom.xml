<!--suppress ALL -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- NOTE: see also https://github.com/Bernardo-MG/archetype-pom -->
  <parent>
    <groupId>dev.aherscu.qa</groupId>
    <artifactId>qa-testing-parent</artifactId>
    <version>0.0.3</version>
    <relativePath>../qa-testing-parent</relativePath>
  </parent>

  <groupId>dev.aherscu.qa</groupId>
  <artifactId>qa-testing-archetype</artifactId>
  <packaging>maven-archetype</packaging>

  <name>QA Testing Archetype</name>
  <description>
    Generates a template Maven project with the QA Automation built-in.
  </description>

  <properties>
    <spotbugs.skip>true</spotbugs.skip>
  </properties>

  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.archetype</groupId>
        <artifactId>archetype-packaging</artifactId>
        <version>3.2.1</version>
      </extension>
    </extensions>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>META-INF/maven/archetype-metadata.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
        <excludes>
          <exclude>META-INF/maven/archetype-metadata.xml</exclude>
        </excludes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>projects/it-basic/archetype.properties</include>
        </includes>
      </testResource>
      <testResource>
        <directory>src/test/resources</directory>
        <filtering>false</filtering>
        <excludes>
          <exclude>projects/it-basic/archetype.properties</exclude>
        </excludes>
      </testResource>
    </testResources>
  </build>
</project>
