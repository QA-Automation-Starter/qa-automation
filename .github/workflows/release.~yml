name: release and push to central

# Temporarily disabling
# The source is from https://theoverengineered.blog/posts/publishing-my-first-artifact-to-maven-central-using-github-actions
# which appears not to use same method as described by Maven/Sonatype
# He just says that tagging is enough. This entails bumping up the
# versions of all modules somehow and drop the SNAPSHOT suffix.
#on:
#  push:
#    tags:
#      - '*'

jobs:
  maven-central-deploy:
    name: Deploy to Maven Central
    runs-on: ubuntu-latest
    environment: development

    steps:
      - uses: actions/checkout@v2
      - uses: actions/setup-java@v3
        with:
          java-version: '8'
          distribution: 'temurin'
          cache: maven
          settings-path: ${{ github.workspace }}
          server-id: ossrh # Value of the distributionManagement/repository/id field of the pom.xml
          server-username: OSSRH_USERNAME
          server-password: OSSRH_PASSWORD
          gpg-private-key: ${{ secrets.GPG_PRIVATE_KEY }}
          gpg-passphrase: GPG_PASSPHRASE

      - name: mvn install
        run: chmod +x mvnw && ./mvnw install -s $GITHUB_WORKSPACE/settings.xml -Pmode-build-quiet
        env:
          GPG_PASSPHRASE: ${{ secrets.GPG_PASSPHRASE }}
          OSSRH_USERNAME: ${{ secrets.OSSRH_USERNAME }}
          OSSRH_PASSWORD: ${{ secrets.OSSRH_PASSWORD }}
      - uses: ncipollo/release-action@v1
        with:
          allowUpdates: true
          artifacts: "${{ github.workspace }}/**/target/*.jar"
      - name: mvn deploy
        run: chmod +x mvnw && ./mvnw deploy -s $GITHUB_WORKSPACE/settings.xml -Pmode-build-quiet
        env:
          GPG_PASSPHRASE: ${{ secrets.GPG_PASSPHRASE }}
          OSSRH_USERNAME: ${{ secrets.OSSRH_USERNAME }}
          OSSRH_PASSWORD: ${{ secrets.OSSRH_PASSWORD }}
      # TODO run site site:stage scm-publish:publish-scm
